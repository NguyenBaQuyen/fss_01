<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><%= t "frontend.company" %></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="<%= "active" if params[:page] == Settings.frontend.home_page %>">
        <%= link_to t("frontend.home_page"), root_url %>
      </li>
    </ul>
    <% unless params[:controller] == "searches" %>
      <div class="col-sm-6 col-md-6">
        <%= search_form_for @q, url: :searches, html: {method: :get},
        class: "navbar-form" do |f| %>
          <div class="input-group col-md-12">
            <%= f.search_field :name_or_description_cont, class: "form-control",
              placeholder: t("frontend.search") %>
            <div class="input-group-btn">
              <%= f.submit class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-search"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <%= link_to new_recipe_path do %>
          <span class="glyphicon glyphicon-upload"></span>
          <%= t "frontend.new_recipe" %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li>
          <%= link_to current_user do %>
            <span class="glyphicon glyphicon-user"></span>
            <%= t "frontend.profile" %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="glyphicon glyphicon-log-out"></span>
            <%= t "frontend.sign_out" %>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-user"></span>
            <%= t "frontend.sign_up" %>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path do %>
            <span class="glyphicon glyphicon-log-in"></span>
            <%= t "frontend.sign_in" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
