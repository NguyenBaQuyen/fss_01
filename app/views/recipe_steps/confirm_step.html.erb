<%= render layout: "shared/form_repice" do |layout| %>
  <%= form_for @recipe, url: wizard_path do |f| %>
    <div class="ui horizontal divider">
      <%= f.label t "recipe.steps" %>
    </div>
    <div class="form-group">
      <%= f.fields_for :steps, html: {multipart: true} do |step| %>
        <%= render "step_fields", f: step %>
      <% end %>
      <p><%= link_to_add_fields t("recipe.add_step"), f, :steps %></p>
    </div>
    <div class="form-actions">
      <div class="pull-right">
        <%= link_to t("recipe.back"), previous_wizard_path,
          class: "btn btn-success"  %>
        <%= link_to t("recipe.skip"), next_wizard_path,
          class: "btn btn-warning" %>
        <%= f.button t("recipe.continue"),
          class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
