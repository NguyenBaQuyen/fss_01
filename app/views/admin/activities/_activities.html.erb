<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><%= t "admin.activities.send_request" %></h4>
    </div>
    <div class="modal-body">
      <%= form_for @activity, url: admin_activities_path do |f| %>
        <table class="table table-striped">
          <tr>
            <td><%= f.label :user_id, t("admin.activities.user_id") %></td>
            <td><%= f.text_field :user_id, value: @recipe.id %></td>
          </tr>
          <tr>
            <td><%= f.label :action_type, t("admin.acticities.type_alert") %></td>
            <td><%= f.select :action_type, options_for_select(@action_type)  %></td>
          </tr>
          <tr>
            <td><%= f.label :url, t("admin.activities.recipe_url") %></td>
            <td><%= f.text_field :url, value: "#{recipe_path(@recipe.id)}" %></td>
          </tr>
          <tr>
            <td><%= f.label :comment, t("admin.activities.content") %></td>
            <td><%= f.text_field :comment %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit t("admin.activities.send_request") %></td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t "admin.reports.close" %>
        </button>
    </div>
  </div>
</div>
