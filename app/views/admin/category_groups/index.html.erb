<h1><%= t "admin.category_group.all_category_group" %></h1>
<table class="table table-striped">
  <tr>
    <th><%= t "admin.category_group.categories" %></th>
  </tr>
  <% @category_groups.each do |categorygroup| %>
    <tr>
      <td>
        <%= link_to categorygroup.name, admin_category_group_path(categorygroup) %>
      </td>
      <td>
        <%= link_to t("admin.category_group.edit"),
          edit_admin_category_group_path(categorygroup.id),
          class: "btn btn-info", remote: true %>
      </td>
      <td>
        <%= link_to t("admin.category_group.delete"), admin_category_group_path(categorygroup.id),
          method: :delete, data: {confirm: t("admin.category_group.action_confirm")},
          class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to t("admin.category_group.add_category_group"), new_admin_category_group_path,
  class: "btn btn-info", remote: true %>
<div class="modal fade" id="addcategroupModal" role="dialog"></div>
