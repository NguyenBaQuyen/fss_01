<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><%= t "admin.categories.add_category" %></h4>
    </div>
    <div class="modal-body">
      <%= form_for @category, url: admin_category_group_categories_path do |f| %>
        <table class="table table-striped">
          <tr>
            <td><%= f.label :category_group_id, t("admin.categories.category_group_id") %></td>
            <td><%= f.text_field :category_group_id,
              value: params[:category_group_id] %></td>
          </tr>
          <tr>
            <td><%= f.label :name, t("admin.categories.category_name") %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit t("admin.categories.submit") %></td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">
        <%= t "admin.categories.close" %>
      </button>
    </div>
  </div>
</div>
