<div class="modal-dialog">
  <%= form_for [:personal, @collection], remote: true do |f| %>
    <div class="modal-body">
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cover %>
        <%= f.file_field :cover, class: "form-control",
          onchange: "show_file_preview(this)" %>
        <%= f.hidden_field :cover_cache %>
      </div>
      <% if @collection.cover? %>
        <div class="ui compact segment">
          <%= image_tag @collection.cover_url,
            id: "form-avatar", class: "ui small image" %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 3, class: "form-control" %>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit t("personal.submit_button"), class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
