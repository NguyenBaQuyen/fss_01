<%= form_for comment, html: {multipart: true}, remote: true,
  authenticity_token: true, class: "ui form" do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :recipe_id, value: comment.recipe.id %>
  <div class="form-group">
    <%= f.text_area :content, class: "form-control", rows: 4,
      placeholder: t("comment.place_holder") %>
  </div>
  <div class="form-group">
    <%= f.file_field :images, multiple: true %>
  </div>
  <%= f.submit t("comment.submit_button"), class: "btn btn-success" %>
<% end %>
