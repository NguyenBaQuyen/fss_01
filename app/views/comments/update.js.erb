<% if @comment.errors.any? %>
  $('#comment-form')
    .html('<%= j render "form", comment: @comment %>');
<% else %>
  $("#comment-<%= @comment.id %>").remove();
  $(".comments").prepend("<%= j render @comment %>");
  $('#comment-form')
    .html('<%= j render "form", comment: @new_comment %>');
<% end %>
