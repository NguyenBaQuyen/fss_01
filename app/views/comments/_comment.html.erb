<div class="comment" id="comment-<%= comment.id %>">
  <a class="avatar">
    <%= image_tag comment.user.avatar, class: "ui avatar image" %>
  </a>
  <div class="content">
    <%= link_to comment.user.name, comment.user, class: "author" %>
    <div class="metadata">
      <span class="date">
        <%= time_ago_in_words comment.updated_at %>
      </span>
      <span class="like">
        <i class="heart icon"></i>
        <span id="comment-<%= comment.id %>-likes-count">
          <%= comment.likes_count %>
        </span>
      </span>
      <% if user_signed_in? %>
        <span id="comment-<%= comment.id %>-likes-button">
          <%= render "likes/like_button", likeable_item: comment %>
        </span>
      <% end %>
    </div>
    <div class="text">
      <%= simple_format comment.content %>
    </div>
    <% if comment.images.any? %>
      <div class="ui small images">
        <div class="ui compact segment">
          <% comment.images.each do |image| %>
            <%= image_tag image, class: "ui image" %>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="actions">
      <% if policy(comment).edit? %>
        <%= link_to t("update"), edit_comment_path(comment), remote: true %>
      <% end %>
      <% if policy(comment).destroy? %>
        <%= link_to t("delete"), comment, method: :delete, remote: true,
          data: {confirm: t("confirm")} %>
      <% end %>
    </div>
  </div>
</div>
