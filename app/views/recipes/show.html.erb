<div class="row">
  <div class="col-sm-5">
    <%= image_tag @recipe.cover, class: "recipe-show-cover" %>
  </div>
  <div class="col-sm-7">
    <% @recipe.list_categories.each do |category| %>
      <div class="ui large orange label">
        <%= category.category_group.name %>
        <span>:</span>
        <div class="detail">
          <%= category.name %>
        </div>
      </div>
    <% end %>
    <br/>
    <h1><%= @recipe.name %></h1>
    <div class="ui large star massive rating" data-max-rating="5"
      data-rating="<%= @recipe.votes_average %>"></div>
    <p>
      <%= @recipe.likes_count %> <%= t "recipe.likes_count" %>
      <span> | </span>
      <%= @recipe.views_count %> <%= t "recipe.views_count" %>
    </p>
    <br/>
    <h4><%= @recipe.description %></h4>
  </div>
</div>
<div class="row">
  <div class="ui horizontal divider">
    <h3><%= t "recipe.materials" %></h3>
  </div>
  <ul>
    <%= render @recipe.materials %>
  </ul>
</div>
<div class="row">
  <div class="ui horizontal divider">
    <h3><%= t "recipe.steps" %></h3>
  </div>
  <%= render @recipe.steps %>
</div>
<div class="row">
  <div class="ui horizontal divider">
    <h3><%= t "recipe.comments" %></h3>
  </div>
  <div class="ui huge comments">
    <%= render @recipe.list_comments %>
  </div>
</div>
