<div class="row bottom-buffer">
  <div class="col-sm-5">
    <%= image_tag @recipe.cover, class: "ui big image" %>
  </div>
  <div class="col-sm-7">
    <% @recipe.list_categories.each do |category| %>
      <div class="ui large orange label">
        <%= category.category_group.name %>
        <span>:</span>
        <div class="detail">
          <%= category.name %>
        </div>
      </div>
    <% end %>
    <br/>
    <h1><%= @recipe.name %>
      <div class="pull-right">
        <%= link_to t("recipe.edit"),
          edit_recipe_path(@recipe) if policy(@recipe).update? %>
        <%= link_to t("recipe.remove"), recipe_path(@recipe),
          method: :delete if policy(@recipe).destroy? %>
      </div>
    </h1>
    <div class="ui large star massive rating" data-max-rating="5"
      data-rating="<%= @recipe.votes_average %>"></div>
    <p>
      <%= @recipe.likes_count %> <%= t "recipe.likes_count" %>
      <span> | </span>
      <%= @recipe.views_count %> <%= t "recipe.views_count" %>
    </p>
    <br/>
    <h4><%= @recipe.description %></h4>
  </div>
</div>
<div class="row">
  <div class="ui top attached tabular menu">
    <div class="tab-button active item" data-tab="tab-1">
      <h4><%= t "recipe.steps" %></h4>
    </div>
    <div class="tab-button item" data-tab="tab-2">
      <h4><%= t "recipe.comments" %></h4>
    </div>
  </div>
  <div class="ui tab bottom attached active segment" data-tab="tab-1">
    <div class="row">
      <div class="col-md-3">
        <h4><%= t "recipe.materials" %></h4>
        <div class="ui divider"></div>
        <ul>
          <%= render @recipe.materials %>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="text-content">
          <%= render @recipe.steps %>
        </div>
      </div>
    </div>
  </div>
  <div class="ui tab bottom attached segment" data-tab="tab-2">
    <div id="comment-form">
      <%= render "comments/form", comment: @recipe.comments.build %>
    </div>
    <div class="ui divider"></div>
    <div class="ui huge comments">
      <%= render @recipe.list_comments %>
    </div>
  </div>
</div>
