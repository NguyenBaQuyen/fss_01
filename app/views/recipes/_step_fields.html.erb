<div class="form-group fields">
  <div class="row">
    <div class="col-lg-2">
      <%= f.label t "step.number_step" %><br>
      <%= f.number_field :order, class: "form-control" %>
    </div>
    <div class="col-lg-6">
      <%= f.label t "step.content" %><br>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="col-lg-3">
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true %>
    </div>
    <div class="col-lg-1">
      <br/>
      <%= link_to_remove_fields t("recipe.remove"), f %>
    </div>
  </div>
</div>
