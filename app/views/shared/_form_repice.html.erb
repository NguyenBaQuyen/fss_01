<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t "recipe.create_recipe" %></h3>
      </div>
      <div class="panel-body">
        <div class="ui ordered massive steps">
          <div class="<%= active_steps_form params[:id], Settings.step.default %> step">
            <div class="content">
              <div class="title"><%= t "recipe.recipes" %></div>
              <div class="description"><%= t "recipe.recipes_content" %></div>
            </div>
          </div>
          <div class="<%= active_steps_form params[:id], Settings.step.confirm_material %> step">
            <div class="content">
              <div class="title"><%= t "recipe.materials" %></div>
              <div class="description"><%= t "recipe.materials_content" %></div>
            </div>
          </div>
          <div class="<%= active_steps_form params[:id], Settings.step.confirm_step %> step">
            <div class="content">
              <div class="title"><%= t "recipe.steps" %></div>
              <div class="description"><%= t "recipe.steps_content" %></div>
            </div>
          </div>
          <div class="<%= active_steps_form params[:id], Settings.step.confirm_category %> step">
            <div class="content">
              <div class="title"><%= t "recipe.category" %></div>
              <div class="description"><%= t "recipe.category_content" %></div>
            </div>
          </div>
        </div>
        <%= yield %>
      </div>
    </div>
  </div>
</div>
