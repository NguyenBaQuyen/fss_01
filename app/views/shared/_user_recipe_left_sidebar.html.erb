<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t "recipe.user_recipe_manager" %></h3>
  </div>
  <div class="panel-body">
    <ul class="nav nav-pills nav-stacked">
      <div class="col-lg-12">
        <aside class="col-md-12">
          <section>
            <h1>
              <%= gravatar_for current_user %>
              <%= current_user.name %>
            </h1>
          </section>
        </aside>
      </div>
      <div class="col-lg-12">
        <li role="presentation">
          <%= link_to t("recipe.create_recipe"), new_recipe_path %>
        </li>
      </div>
      <div class="col-lg-12">
        <li role="presentation" class="active">
          <%= link_to t("recipe.user_recipe_registed"),
            recipes_path(type: Settings.recipe_index_type.posted) %>
          <span class="badge pull-right" id="published">
            <%= @recipes_count.not_draft.count %></span>
        </li>
      </div>
      <div class="col-lg-12">
        <li role="presentation" class="active">
          <%= link_to t("recipe.draft"),
            recipes_path(type: Settings.recipe_index_type.draft) %>
          <span class="badge pull-right" id="draft">
            <%= @recipes_count.draft.count %></span>
        </li>
      </div>
      <div class="col-lg-12">
        <li role="presentation" class="active">
          <%= link_to t "recipe.collection" %>
          <span class="badge pull-right"><%= t "demo.number" %></span>
        </li>
      </div>
    </ul>
  </div>
</div>
